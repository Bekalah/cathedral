{
  "name": "core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/core",
  "projectType": "library",
  "tags": ["type:library", "scope:core", "platform:universal"],
  "targets": {
    "generate-data": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node packages/core/scripts/generate-node-data.js",
        "cwd": "../.."
      },
      "outputs": ["{projectRoot}/data"]
    },
    "generate-avalon": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node packages/core/scripts/generate-avalon-data.js",
        "cwd": "../.."
      },
      "dependsOn": ["generate-data"],
      "outputs": ["{projectRoot}/data/avalon"]
    },
    "validate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node -e \"const data = require('./data/nodes.json'); console.log('âœ… Node data is valid JSON with', Object.keys(data.nodes).length, 'nodes');\"",
        "cwd": "packages/core"
      },
      "dependsOn": ["generate-data"]
    },
    "export-godot": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node packages/core/scripts/export-godot-scenes.js",
        "cwd": "../.."
      },
      "dependsOn": ["generate-data"],
      "outputs": ["{projectRoot}/data/godot"]
    },
    "export-web": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node packages/core/scripts/export-web-assets.js",
        "cwd": "../.."
      },
      "dependsOn": ["generate-data"],
      "outputs": ["{projectRoot}/data/web"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/core/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "coverage": true
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/core/**/*.{js,ts}"]
      }
    }
  }
}
