{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Codex Node",
  "type": "object",
  "required": ["id", "title"],
  "properties": {
    "id":        { "type": "string", "pattern": "^[A-Z0-9\-_:]+$" },
    "title":     { "type": "string" },
    "realm":     { "type": "string" },
    "archetype": { "type": ["string", "array"] },
    "function":  { "type": ["string", "array"] },
    "tarot_overlays": { "type": "array", "items": { "type": "string" } },
    "presets":   { "type": "object" },
    "annex":     { "type": "object" },
    "safety":    { "type": "object" },
    "sealed":    { "type": "boolean" },
    "version":   { "type": "string" },
    "updated":   { "type": "string" }
  },
  "additionalProperties": true
}
