{
  "name": "@cathedral/unified-codex-extractor",
  "version": "1.0.0",
  "description": "Professional book art extraction system for unified codex - treats science, art, technology, and all knowledge domains as equal",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "extract": "node dist/extractor/bookExtractor.js",
    "ocr": "node dist/processor/ocrProcessor.js",
    "validate": "node dist/validator/qualityValidator.js",
    "export": "node dist/export/codexExporter.js",
    "test": "pnpm run validate:quality && pnpm run validate:sacred-math",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.{ts,tsx,js,jsx} --max-warnings=0",
    "lint:fix": "eslint src/**/*.{ts,tsx,js,jsx} --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md,css,html}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md,css,html}\"",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist build",
    "clean:all": "rimraf dist build node_modules/.turbo",
    "validate:ci": "npm run type-check && npm run lint && npm run test:coverage",
    "benchmark": "vitest run --reporter=verbose --reporter=json --outputFile=benchmark-results.json",
    "validate:sacred-math": "node scripts/validate-sacred-math.js",
    "validate:trauma-safety": "node scripts/validate-trauma-safety.js",
    "validate:integration": "node scripts/validate-integration.js",
    "validate:ownership": "node scripts/validate-ownership.js"
  },
  "dependencies": {
    "@cathedral/cathedral-design-library": "workspace:*",
    "@cathedral/codex-144-99": "workspace:*",
    "@cathedral/codex-144-99-core": "workspace:*",
    "@cathedral/godot-design-studio": "workspace:*",
    "@cathedral/shared": "workspace:*",
    "canvas": "^2.11.2",
    "exifreader": "^4.33.1",
    "jimp": "^0.22.12",
    "mammoth": "^1.11.0",
    "opencv4nodejs": "^5.6.0",
    "pdf-parse": "^1.1.4",
    "sharp": "^0.32.6",
    "svg2img": "^0.9.4",
    "tesseract.js": "^5.1.1",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@types/node": "^20.19.26",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^9.1.2",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2",
    "tsx": "^4.21.0",
    "typescript": "^5.6.2",
    "vitest": "^2.1.9"
  },
  "keywords": [
    "book-extraction",
    "codex",
    "unified-knowledge",
    "ocr",
    "art-extraction",
    "scientific-diagrams",
    "mystical-symbols",
    "architectural-plans",
    "quality-control",
    "professional-tools"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./extractor": "./dist/extractor/index.js",
    "./processor": "./dist/processor/index.js",
    "./validator": "./dist/validator/index.js",
    "./types": "./dist/types/index.js"
  },
  "engines": {
    "node": ">=20.18.0",
    "pnpm": ">=8.15.0"
  },
  "license": "CC0-1.0",
  "consolidated": true,
  "consolidatedAt": "2025-12-01T19:37:08.566Z",
  "packageManager": "pnpm@10.23.0",
  "alchemical": {
    "name": "Unified Codex Extractor",
    "symbol": "⊙",
    "label": "⊙ Unified Codex Extractor (@cathedral/unified-codex-extractor)"
  },
  "cathedral": {
