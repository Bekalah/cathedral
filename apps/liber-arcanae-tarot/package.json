{
  "name": "@bekalah/liber-arcanae-tarot",
  "version": "2.0.0",
  "description": "🃏 Liber Arcanae Tarot - Living Major Arcana App with Interactive Readings & Sacred Art",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.17.0"
  },
  "scripts": {
    "dev": "vite dev --port 3001",
    "build": "tsc && vite build",
    "build:analyze": "vite build --mode analyze",
    "preview": "vite preview",
    "serve": "vite preview --host",
    "clean": "rm -rf dist .vite",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "format": "prettier --write src/**/*.{ts,tsx}",
    "format:check": "prettier --check src/**/*.{ts,tsx}",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "storybook": "storybook dev -p 6007",
    "storybook:build": "storybook build",
    "generate-tarot": "node scripts/generate-tarot-deck.js",
    "generate-spread": "node scripts/generate-tarot-spreads.js",
    "generate-reading": "node scripts/generate-sample-reading.js",
    "validate-tarot": "node scripts/validate-tarot-data.js"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.0",
    "vite": "^5.4.62",
    "@vitejs/plugin-react": "^4.3.1",
    "@cathedral/liber-arcanae": "workspace:*",
    "@cathedral/codex-144-99": "workspace:*",
    "@cathedral/tesseract-bridge": "workspace:*",
    "@cathedral/art-generation-node": "workspace:*",
    "@cathedral/crystals": "workspace:*",
    "framer-motion": "^11.11.17",
    "react-spring": "^9.7.4",
    "gsap": "^3.12.5",
    "animejs": "^3.2.2",
    "lucide-react": "^0.263.1",
    "clsx": "^1.2.1",
    "tailwind-merge": "^1.14.0",
    "zustand": "^5.0.1",
    "react-query": "^3.39.3",
    "howler": "^2.2.4",
    "react-use-gesture": "^9.1.3",
    "react-use-measure": "^2.1.1",
    "@tanstack/react-query": "^4.36.1",
    "date-fns": "^3.6.0",
    "uuid": "^10.0.0",
    "canvas-confetti": "^1.9.3",
    "react-helmet-async": "^2.0.5"
  },
  "devDependencies": {
    "@types/uuid": "^10.0.0",
    "@types/canvas-confetti": "^1.6.4",
    "@types/howler": "^2.2.11",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.16",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "vitest": "^1.6.0",
    "@testing-library/react": "^15.0.7",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/user-event": "^14.5.2",
    "jsdom": "^24.1.1",
    "@storybook/react-vite": "^8.4.0",
    "@storybook/addon-essentials": "^8.4.0",
    "@storybook/addon-interactions": "^8.4.0",
    "storybook": "^8.4.0",
    "tailwindcss": "^3.4.14",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47"
  },
  "author": "Rebecca Respawn <bekalah@users.noreply.github.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Bekalah/cathedral.git",
    "directory": "apps/liber-arcanae-tarot"
  },
  "homepage": "https://bekalah.github.io/cathedral",
  "bugs": {
    "url": "https://github.com/Bekalah/cathedral/issues"
  },
  "keywords": [
    "tarot",
    "liber-arcanae",
    "living-tarot",
    "interactive-tarot",
    "major-arcana",
    "sacred-readings",
    "circuitum99",
    "codex-abyssiae",
    "consciousness-technology",
    "spiritual-guidance",
    "interactive-reading",
    "sacred-art",
    "alchemy",
    "mystery-tradition"
  ],
  "cathedral": {
    "role": "tarot_application",
    "features": [
      "22-living-major-arcana-cards",
      "interactive-tarot-readings",
      "circuitum99-spreads",
      "fusion-kink-inclusive",
      "trauma-informed-design",
      "azure-ai-enhanced-art",
      "multi-format-export",
      "personal-reading-journal",
      "sacred-geometry-layouts",
      "real-time-card-interactions"
    ],
    "integrations": {
      "main_cathedral": "tesseract-bridge-connection",
      "art_generation": "azure-ai-enhanced-tarot-images",
      "consciousness_tracking": "Reading session analytics",
      "crystal_resonance": "Card-element-resonance-system",
      "fusion_system": "Kink-inclusive reading interpretations"
    },
    "user_experience": {
      "difficulty_levels": ["Beginner", "Intermediate", "Advanced", "Master"],
      "reading_types": ["Daily Guidance", "Relationship", "Career", "Spiritual", "Custom Spread"],
      "accessibility": "Full keyboard navigation, screen reader support",
      "personalization": "User card preferences, journal, reading history"
    }
  },
  "build": {
    "minify": "esbuild",
    "target": "esnext",
    "outDir": "dist",
    "sourcemap": true,
    "rollupOptions": {
      "external": ["node:*"]
    }
  },
  "vite": {
    "server": {
      "port": 3001,
      "host": true
    },
    "build": {
      "target": "esnext",
      "minify": "esbuild",
      "sourcemap": true
    },
    "test": {
      "environment": "jsdom",
      "setupFiles": ["./src/test-setup.ts"]
    }
  }
}
