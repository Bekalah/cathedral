{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Codex Node",
  "type": "object",
  "required": ["id"],
  "properties": {
    "id": { "type": "string", "pattern": "^(C144N-[0-9]{3}|C144N-ARCANA-[A-Z0-9_-]+)$" },
    "title": { "type": "string" },
    "realm": { "type": "string" },
    "lineage": { "type": "array", "items": { "type": "string" } },
    "formula": { "type": "object" },
    "archetype": { "type": "string" },
    "tarot_overlays": { "type": "array", "items": { "type": "string" } },
    "presets": { "type": "object" },
    "annex": { "type": "object" },
    "safety": { "type": "object" },
    "provenance": { "type": "object" }
  },
  "additionalProperties": true
}
