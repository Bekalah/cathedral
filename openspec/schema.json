{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://bekalah.github.io/cathedral/openspec/schema.json",
  "title": "Cathedral OpenSpec Schema",
  "description": "Schema for Cathedral project specifications and proposals",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "proposals": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/proposal"
      }
    },
    "architecture": {
      "type": "object"
    },
    "systems": {
      "type": "object"
    }
  },
  "required": ["version", "name"],
  "definitions": {
    "proposal": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "status": {
          "enum": ["draft", "review", "approved", "implemented", "rejected"]
        },
        "description": {
          "type": "string"
        },
        "impact": {
          "type": "object",
          "properties": {
            "breaking": {
              "type": "boolean"
            },
            "systems": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "implementation": {
          "type": "object",
          "properties": {
            "files": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "steps": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      },
      "required": ["id", "title", "status"]
    }
  }
}
