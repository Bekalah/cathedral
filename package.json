{
  "name": "cathedral-real-monorepo",
  "version": "1.0.0",
  "description": "Magnum Opus v1 Cosmos Builder - Cathedral Real Monorepo",
  "private": true,
  "packageManager": "pnpm@8.15.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "turbo": "turbo",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "clean:all": "turbo run clean --force",
    "build:perf": "turbo run build --performance",
    "build:ci": "turbo run build --concurrency=8 --no-cache",
    "test:ci": "turbo run test --concurrency=8 --no-cache",
    "dev:all": "turbo run dev --parallel",
    "deps:update": "pnpm update -r",
    "deps:audit": "pnpm audit -r",
    "deps:check": "pnpm outdated -r",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,css,html}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,css,html}\"",
    "validate": "npm run type-check && npm run lint && npm run test",
    "validate:ci": "npm run type-check && npm run lint && npm run test:ci",
    "benchmark": "turbo run benchmark",
    "release": "changeset publish",
    "quality": "node scripts/quality-check.js",
    "quality:audit": "npm run quality && npm run deps:audit",
    "quality:full": "npm run quality && npm run quality:audit && npm run validate",
    "quality:security": "npm run deps:audit && npm audit --audit-level=moderate"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "@changesets/cli": "^2.27.8",
    "prettier": "^3.3.3",
    "typescript": "^5.6.2",
    "tsx": "^4.19.1",
    "@typescript-eslint/eslint-plugin": "^8.6.0",
    "@typescript-eslint/parser": "^8.6.0",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "vitest": "^2.1.1",
    "tsup": "^8.3.0",
    "rimraf": "^6.0.1",
    "cross-env": "^7.0.3"
  },
  "engines": {
    "node": ">=18.18.0",
    "pnpm": ">=8.15.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cathedral-real/cathedral-real.git"
  },
  "author": "Cathedral Real Team",
  "license": "MIT",
  "keywords": [
    "cathedral",
    "cosmos-builder",
    "monorepo",
    "turbo",
    "typescript"
  ],
  "config": {
    "cathedral": {
      "build": {
        "target": "<5min",
        "concurrency": 12,
        "cacheTimeout": "7d"
      },
      "development": {
        "hotReload": true,
        "parallel": true,
        "maxConcurrency": 16
      }
    }
  },
  "pnpm": {
    "overrides": {
      "typescript": "^5.6.2"
    }
  }
}