  "version": "0.2.0",
  "configurations": [
    {
      "request": "launch",
      "name": "Deno: Launch Program",
      "type": "node",
      "program": "${workspaceFolder}/main.ts",
      "cwd": "${workspaceFolder}",
      "env": {},
      "runtimeExecutable": "deno",
      "runtimeArgs": ["run", "--unstable", "--inspect-brk", "--allow-all"],
      "attachSimplePort": 9229
    },
    {
      "name": "Python: Design Suite Wrapper",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/design-suite/cathedral_design_suite.py",
      "console": "integratedTerminal",
      "python": "${workspaceFolder}/.venv/bin/python"
    },
    {
      "name": "Python: Achad System Demo",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/hall-of-mysteries/frater_achad_system.py",
      "console": "integratedTerminal",
      "python": "${workspaceFolder}/.venv/bin/python"
    },
    {
      "name": "Python: Combined Export",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/tools/export/combined_export.py",
      "console": "integratedTerminal",
      "python": "${workspaceFolder}/.venv/bin/python"
    }
  ]
}
