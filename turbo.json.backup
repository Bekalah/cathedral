{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": ["**/*.json", "**/*.md", "tsconfig.json"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".turbo/cache/**"],
      "env": ["NODE_ENV"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "type-check": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "lint": {
      "outputs": [],
      "env": ["NODE_ENV"]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**", ".nyc_output/**"],
      "env": ["NODE_ENV", "CI"]
    },
    "clean": {
      "outputs": [],
      "cache": false
    },
    "build-art": {
      "dependsOn": ["^build"],
      "outputs": ["generated_art/**", "assets/art/**"],
      "env": ["NODE_ENV"]
    },
    "build-synth": {
      "dependsOn": ["build-art"],
      "outputs": ["generated_synth/**", "assets/audio/**"],
      "env": ["NODE_ENV"]
    },
    "generate-arcana": {
      "dependsOn": ["build"],
      "outputs": ["data/arcana/**", "generated/arcana/**"]
    },
    "connect-modules": {
      "dependsOn": ["build-art", "build-synth", "generate-arcana"],
      "outputs": ["cathedral_manifest.json", "scripts/connections/**"]
    },
    "architect-scribe": {
      "dependsOn": ["connect-modules"],
      "outputs": ["docs/grimoire/**", "generated/**"]
    },
    "deploy": {
      "dependsOn": ["build", "test", "lint", "architect-scribe"],
      "outputs": [],
      "env": ["GITHUB_TOKEN", "VERCEL_TOKEN"]
    },
    "preview": {
      "dependsOn": ["build"],
      "outputs": []
    }
  },
  "globalEnv": [
    "NODE_ENV",
    "CI",
    "GITHUB_TOKEN",
    "AZURE_AI_STUDIO_ENDPOINT",
    "AZURE_AI_STUDIO_KEY"
  ]
}
