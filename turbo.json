{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        "build/**",
        ".next/**",
        "!.next/cache/**",
        "public/build/**"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"]
    },
    "lint": {
      "outputs": []
    },
    "type-check": {
      "dependsOn": ["^type-check"],
      "outputs": []
    },
    "clean": {
      "cache": false
    },
    "deploy": {
      "dependsOn": ["build", "test", "lint"],
      "outputs": ["dist/**", "build/**"]
    },
    "validate-openspec": {
      "dependsOn": ["build"],
      "outputs": ["openspec/validation/**"]
    }
  },
  "globalDependencies": [
    "tsconfig.base.json",
    ".eslintrc.cjs",
    "prettier.config.cjs"
  ],
  "tasks": {
    "build": {
      "outputs": [
        "dist/**",
        "build/**",
        ".next/**",
        "public/build/**",
        "dist/index.html"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build"]
    },
    "lint": {
      "outputs": []
    },
    "type-check": {
      "outputs": []
    }
  }
}
