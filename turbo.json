{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/*.json",
    "**/*.md",
    "**/.env",
    "tsconfig.json",
    "CATHEDRAL_INTEGRATION_MAP.json",
    "MASTER_INDEX.md",
    "openspec/**/*.json",
    "openspec/**/*.md"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".turbo/cache/**"],
      "env": ["NODE_ENV"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "type-check": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "lint": {
      "outputs": [],
      "env": ["NODE_ENV"]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**", ".nyc_output/**"],
      "env": ["NODE_ENV", "CI"]
    },
    "clean": {
      "outputs": [],
      "cache": false
    },
    "openspec-validate": {
      "cache": false,
      "outputs": [],
      "inputs": ["openspec/**/*.json", "openspec/**/*.md"]
    },
    "openspec-sync": {
      "dependsOn": ["openspec-validate"],
      "outputs": ["openspec/changes/**"],
      "inputs": ["openspec/**/*.json"]
    },
    "validate-python": {
      "cache": false,
      "outputs": [],
      "inputs": ["design-suite/**/*.py", "hall-of-mysteries/**/*.py"]
    },
    "export-json": {
      "dependsOn": ["validate-python", "openspec-sync"],
      "outputs": [
        "design-suite/outputs/**/*.json",
        "hall-of-mysteries/outputs/**/*.json"
      ],
      "inputs": [
        "design-suite/**/*.py",
        "hall-of-mysteries/**/*.py",
        "CATHEDRAL_INTEGRATION_MAP.json"
      ]
    },
    "build-art": {
      "dependsOn": ["^build", "export-json"],
      "outputs": ["generated_art/**", "assets/art/**"],
      "env": ["NODE_ENV"]
    },
    "build-synth": {
      "dependsOn": ["build-art"],
      "outputs": ["generated_synth/**", "assets/audio/**"],
      "env": ["NODE_ENV"]
    },
    "generate-arcana": {
      "dependsOn": ["build", "export-json"],
      "outputs": ["data/arcana/**", "generated/arcana/**"],
      "inputs": ["CATHEDRAL_INTEGRATION_MAP.json"]
    },
    "connect-modules": {
      "dependsOn": ["build-art", "build-synth", "generate-arcana"],
      "outputs": ["cathedral_manifest.json", "scripts/connections/**"],
      "inputs": ["CATHEDRAL_INTEGRATION_MAP.json", "openspec/**/*.json"]
    },
    "architect-scribe": {
      "dependsOn": ["connect-modules"],
      "outputs": ["docs/grimoire/**", "generated/**"]
    },
    "deploy": {
      "dependsOn": ["build", "test", "lint", "architect-scribe"],
      "outputs": [],
      "env": ["GITHUB_TOKEN", "VERCEL_TOKEN"]
    },
    "preview": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "sync-integration-maps": {
      "dependsOn": ["export-json"],
      "outputs": [
        "packages/*/integration-map.json",
        "stone-grimoire/integration-map.json"
      ],
      "inputs": ["CATHEDRAL_INTEGRATION_MAP.json"]
    },
    "pr-validate": {
      "dependsOn": ["openspec-validate", "validate-python", "lint"],
      "outputs": [],
      "env": ["GITHUB_TOKEN", "GITHUB_HEAD_REF", "GITHUB_BASE_REF"]
    }
  },
  "globalEnv": [
    "NODE_ENV",
    "CI",
    "GITHUB_TOKEN",
    "GITHUB_REPOSITORY",
    "GITHUB_HEAD_REF",
    "GITHUB_BASE_REF",
    "AZURE_AI_STUDIO_ENDPOINT",
    "AZURE_AI_STUDIO_KEY",
    "VERCEL_TOKEN"
  ]
}
