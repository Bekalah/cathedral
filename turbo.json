{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".turbo/cache/**"],
      "env": ["NODE_ENV"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "type-check": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "lint": {
      "outputs": [],
      "env": ["NODE_ENV"]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**", ".nyc_output/**"],
      "env": ["NODE_ENV", "CI"]
    },
    "clean": {
      "outputs": [],
      "cache": false
    },
    "web:dev": {
      "cache": false,
      "dependsOn": ["build"]
    },
    "web:build": {
      "dependsOn": ["build"],
      "outputs": ["apps/web/out/**"],
      "cache": true
    }
  }
}
