{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": ["**/*.json"],
  "tasks": {
    "generate-data": {
      "outputs": ["packages/core/data/**", "data/**"]
    },
    "build": {
      "dependsOn": ["^build", "generate-data"],
      "outputs": ["dist/**", "build/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"]
    },
    "lint": {
      "outputs": []
    },
    "type-check": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "clean": {
      "outputs": []
    },
    "deploy": {
      "dependsOn": ["build", "test"],
      "outputs": []
    },
    "validate": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "story": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "fusion": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "design": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "godot-export": {
      "dependsOn": ["generate-data"],
      "outputs": ["exports/**"]
    },
    "generate-avalon": {
      "dependsOn": ["generate-data"],
      "outputs": ["packages/core/data/avalon/**"]
    },
    "publish": {
      "dependsOn": ["build", "test", "lint"],
      "outputs": []
    }
  }
}
