{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "generate-data": {
      "outputs": ["packages/core/data/**"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "godot-export": {
      "dependsOn": ["generate-data"]
    },
    "generate-avalon": {
      "dependsOn": ["generate-data"],
      "outputs": ["packages/core/data/avalon/**"]
    },
    "test": {
      "outputs": ["coverage/**"]
    },
    "lint": {
      "outputs": []
    },
    "type-check": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "preview": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "outputs": []
    }
  },
  "globalDependencies": [
    "package.json",
    "tsconfig.json",
    "turbo.json"
  ]
}
