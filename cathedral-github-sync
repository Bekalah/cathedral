echo ""
echo "ğŸ‰ Cathedral Master Sync Complete!"
echo "ğŸŒ Live at: https://bekalah.github.io/cathedral"
echo "ğŸ“… All work synchronized: $(date)"
EOF

chmod +x cathedral-sync-all.sh

echo "âœ… Master sync script created"

# Test the connection
echo "ğŸ§ª Testing GitHub connection..."
if git fetch github main 2>/dev/null; then
    echo "âœ… GitHub connection working"
else
    echo "âš ï¸  GitHub connection needs setup"
    echo "ğŸ’¡ You may need to set up GitHub credentials"
fi

echo ""
